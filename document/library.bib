file = {:D$\backslash$:/maxli/Documents/papers/W{\"{o}}lfl et al.{\_}2019{\_}Seafloor mapping - The challenge of a truly global ocean bathymetry.pdf:pdf},
issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Bathymetry,GEBCO,Mapping,SDG14,Seabed 2030,Seafloor},
number = {JUN},
pages = {283},
