journal = {Journal of Applied Ecology},
keywords = {ecosystem engineers,engineering measures,large-scale,mussels,pattern formation,restoration,self-facilitating feedback},
number = {10},
pages = {1958--1968},
title = {{Promoting self-facilitating feedback processes in coastal ecosystem engineers to increase restoration success: Testing engineering measures}},
