file = {:D$\backslash$:/maxli/Documents/papers/Zhu et al.{\_}2020{\_}Integration of GF2 Optical, GF3 SAR, and UAV Data for Estimating Aboveground Biomass of China's Largest Artificially Pla.pdf:pdf},
