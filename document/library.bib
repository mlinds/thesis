issn = {0924-2716},
journal = {ISPRS Journal of Photogrammetry and Remote Sensing},
keywords = {Bathymetry,Downscaled,High spatial resolution,Landsat-8,Shallow water},
month = {oct},
pages = {65--81},
publisher = {Elsevier},
title = {{A downscaled bathymetric mapping approach combining multitemporal Landsat-8 and high spatial resolution imagery: Demonstrations from clear to turbid waters}},
