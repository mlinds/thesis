pages = {281--291},
title = {{Benchmarking urban flood models of varying complexity and scale using high resolution terrestrial LiDAR data}},
url = {http://dx.doi.org/10.1016/j.pce.2010.12.011 https://linkinghub.elsevier.com/retrieve/pii/S1474706510002184},
