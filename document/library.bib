issn = {09258574},
journal = {Ecological Engineering},
keywords = {Estuary,Hydrodynamic threshold,Mangrove,Restoration,Wave climate},
month = {dec},
pages = {106070},
publisher = {Elsevier},
title = {{Hydrodynamic habitat thresholds for mangrove vegetation on the shorelines of a microtidal estuarine lagoon}},
