title = {{Physics-guided deep learning for rainfall-runoff modeling by considering extreme events and monotonic relationships}},
url = {https://www.sciencedirect.com/science/article/pii/S0022169421010933 https://linkinghub.elsevier.com/retrieve/pii/S0022169421010933},
