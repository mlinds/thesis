file = {:D$\backslash$:/maxli/Documents/papers/Lai et al.{\_}2022{\_}A Portable Algorithm to Retrieve Bottom Depth of Optically Shallow Waters from Top-Of-Atmosphere Measurements.pdf:pdf},
issn = {2694-1589},
journal = {Journal of Remote Sensing},
month = {feb},
pages = {1--16},
publisher = {American Association for the Advancement of Science (AAAS)},
title = {{A Portable Algorithm to Retrieve Bottom Depth of Optically Shallow Waters from Top-Of-Atmosphere Measurements}},
