issn = {2337-5779},
journal = {Journal of Engineering and Technological Sciences},
keywords = {Indonesia,analytical model,mangrove,wave attenuation},
number = {2},
pages = {89--108},
publisher = {Bandung Institute of Technology},
title = {{Analysis of Surface Wave Attenuation in Mangrove Forests}},
