file = {:D$\backslash$:/maxli/Documents/papers/Bidorn et al.{\_}2021{\_}An analysis of the factors responsible for the shoreline retreat of the Chao Phraya Delta (Thailand).pdf:pdf},
issn = {18791026},
journal = {Science of the Total Environment},
keywords = {Chao Phraya Delta,Dams,Mangroves,Sediment flux,Shoreline retreat,Subsidence},
language = {en},
pages = {145253},
pmid = {33736266},
publisher = {The Authors},
title = {{An analysis of the factors responsible for the shoreline retreat of the Chao Phraya Delta (Thailand)}},
