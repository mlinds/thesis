file = {:D$\backslash$:/maxli/Documents/papers/Nicholls, Hoozemans, Marchand{\_}1999{\_}Increasing flood risk and wetland losses due to global sea-level rise regional and global analyses.pdf:pdf},
journal = {Global Environmental Change},
