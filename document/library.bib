issn = {03783839},
journal = {Coastal Engineering},
keywords = {Foreshore,Salt marsh,Uncertainties,Vegetation,Wave attenuation,Wave overtopping},
month = {sep},
pages = {47--64},
publisher = {Elsevier Ltd},
title = {{Assessing safety of nature-based flood defenses: Dealing with extremes and uncertainties}},
