file = {:D$\backslash$:/maxli/Documents/papers/Giri et al.{\_}2011{\_}Status and distribution of mangrove forests of the world using earth observation satellite data.pdf:pdf},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Global distributions,Image processing,Landsat,Mangrove,Mapping,Remote sensing,image processing,mangrove,mapping,remote sensing},
