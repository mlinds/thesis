doi = {10.1111/j.1467-8659.2009.01450.x},
file = {:D$\backslash$:/maxli/Documents/papers/Holten, van Wijk{\_}2009{\_}Force-Directed Edge Bundling for Graph Visualization.pdf:pdf},
