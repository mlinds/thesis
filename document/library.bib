@article{Kuenzer2011,
abstract = {Mangrove ecosystems dominate the coastal wetlands of tropical and subtropical regions throughout the world. They provide various ecological and economical ecosystem services contributing to coastal erosion protection, water filtration, provision of areas for fish and shrimp breeding, provision of building material and medicinal ingredients, and the attraction of tourists, amongst many other factors. At the same time, mangroves belong to the most threatened and vulnerable ecosystems worldwide and experienced a dramatic decline during the last half century. International programs, such as the Ramsar Convention on Wetlands or the Kyoto Protocol, underscore the importance of immediate protection measures and conservation activities to prevent the further loss of mangroves. In this context, remote sensing is the tool of choice to provide spatio-temporal information on mangrove ecosystem distribution, species differentiation, health status, and ongoing changes of mangrove populations. Such studies can be based on various sensors, ranging from aerial photography to high- and medium-resolution optical imagery and from hyperspectral data to active microwave (SAR) data. Remote-sensing techniques have demonstrated a high potential to detect, identify, map, and monitor mangrove conditions and changes during the last two decades, which is reflected by the large number of scientific papers published on this topic. To our knowledge, a recent review paper on the remote sensing of mangroves does not exist, although mangrove ecosystems have become the focus of attention in the context of current climate change and discussions of the services provided by these ecosystems. Also, climate change-related remote-sensing studies in coastal zones have increased drastically in recent years. The aim of this review paper is to provide a comprehensive overview and sound summary of all of the work undertaken, addressing the variety of remotely sensed data applied for mangrove ecosystem mapping, as well as the numerous methods and techniques used for data analyses, and to further discuss their potential and limitations.},
author = {Kuenzer, Claudia and Bluemel, Andrea and Gebhardt, Steffen and Quoc, Tuan Vo and Dech, Stefan},
doi = {10.3390/rs3050878},
file = {:D$\backslash$:/maxli/Documents/papers/Kuenzer et al.{\_}2011{\_}Remote Sensing of Mangrove Ecosystems A Review.pdf:pdf},
issn = {2072-4292},
journal = {Remote Sensing},
keywords = {coastal zone remote sensing,image processing methods for mangrove discriminati,mangrove ecosystems,mangrove mapping applications,reflectance and backscattering characteristics of,review},
language = {en},
number = {5},
pages = {878--928},
shorttitle = {Remote Sensing of Mangrove Ecosystems},
title = {{Remote Sensing of Mangrove Ecosystems: A Review}},
url = {https://www.mdpi.com/2072-4292/3/5/878},
volume = {3},
year = {2011}
}
@article{Popescu2018,
abstract = {The upcoming Ice, Cloud and Land Elevation Satellite-2 (ICESat-2) mission will offer prospects for mapping and monitoring biomass and carbon of terrestrial ecosystems over large areas using photon counting LiDAR data. In this paper, we aim to develop a methodology to derive terrain elevation and vegetation canopy height from test-bed sensor data and further pre-validate the capacity of the mission to meet its science objectives for the ecosystem community. We investigated a novel methodological framework with two essential steps for characterizing terrain and canopy height using Multiple Altimeter Beam Experimental LiDAR (MABEL) data and simulated ICESat-2 data with various vegetation conditions. Our algorithm first implements a multi-level noise filtering approach to minimize noise photons and subsequently classifies the remaining photons into ground and top of canopy using an overlapping moving window method and cubic spline interpolation. Results of noise filtering show that the design of the multi-level filtering process is effective to identify background noise and preserve signal photons in the raw data. Moreover, calibration results using MABEL and simulated ICESat-2 data share similar trends with the retrieved terrain being more accurate than the retrieved canopy height, and the nighttime results being better than corresponding daytime results. Compared to the results of simulated ICESat-2 data, MABEL data achieve lower accuracy for ground and canopy heights in terms of root mean square error (RMSE), which may partly result from the inconsistency between MABEL and reference data. Specifically, simulated ICESat-2 data using 115 various nighttime and daytime scenarios, yield average RMSE values of 1.83 m and 2.80 m for estimated ground elevation, and 2.70 m and 3.59 m for estimated canopy height. Additionally, the accuracy assessment of percentile heights of simulated ICESat-2 data further substantiates the robustness of the methodology from different perspectives. The methodology developed in this study illustrates plausible ways of processing the data that are structurally similar to expected ICESat-2 data and holds the potential to be a benchmark for further method adjustment once genuine ICESat-2 are available.},
author = {Popescu, S. C. and Zhou, T. and Nelson, R. and Neuenschwander, A. and Sheridan, R. and Narine, L. and Walsh, K. M.},
doi = {10.1016/J.RSE.2018.02.019},
file = {:D$\backslash$:/maxli/Documents/papers/Popescu et al.{\_}2018{\_}Photon counting LiDAR An adaptive ground and canopy height retrieval algorithm for ICESat-2 data.pdf:pdf},
issn = {0034-4257},
journal = {Remote Sensing of Environment},
keywords = {ATLAS,Canopy height,ICESat-2,MABEL,Photon classification,Photon counting LiDAR,Terrain elevation},
month = {apr},
pages = {154--170},
publisher = {Elsevier},
title = {{Photon counting LiDAR: An adaptive ground and canopy height retrieval algorithm for ICESat-2 data}},
volume = {208},
year = {2018}
}
