issn = {03091708},
journal = {Advances in Water Resources},
keywords = {Damping coefficient,Drag force,Experimental analysis,Large scale 3-D model,Rhizophora mangrove forest,Wave attenuation},
month = {sep},
pages = {103376},
publisher = {Elsevier},
title = {{Experimental analysis of wave attenuation and drag forces in a realistic fringe Rhizophora mangrove forest}},
