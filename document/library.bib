doi = {10.1890/10-1510.1},
file = {:D$\backslash$:/maxli/Documents/papers/Barbier EB et al.{\_}2011{\_}The value of estuarine and coastal ecosystem services.pdf:pdf},
issn = {0012-9615},
journal = {Ecological Monographs},
